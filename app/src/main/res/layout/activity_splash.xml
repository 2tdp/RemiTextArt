<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.splash.SplashActivity">

    <ImageView
        android:id="@+id/ivBeat1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_splash_beat" />

    <ImageView
        android:id="@+id/ivBeat2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_splash_beat" />

    <ImageView
        android:id="@+id/ivBeat3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_splash_beat" />

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="@dimen/_98sdp"
        android:layout_height="@dimen/_98sdp"
        android:src="@drawable/logo_splash" />
</RelativeLayout>